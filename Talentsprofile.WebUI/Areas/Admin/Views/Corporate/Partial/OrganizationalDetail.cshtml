                    <label for="inputEmail3" class="col-sm-4 control-label">
                    </label>
                    <div class="col-sm-4">
                        <input type="url" class="form-control" placeholder="Website" maxlength="60" name="companyUri" id="companyUri" />
                    </div>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" placeholder="Logo Uri" maxlength="100" name="companyLogoUri" id="companyLogoUri" />
                    </div>
                </div>
                <div class="form-group">
