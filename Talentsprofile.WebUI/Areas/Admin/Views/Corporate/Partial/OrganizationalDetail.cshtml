                            <option value="21">Hospitality/Travel/Hotels</option>
                            <option value="22">Human Resources/Consultancy</option>
                            <option value="24">IT - Internet/Cyber Security</option>
                            <option value="3">IT - Software Engineering/Development/Programming</option>
                            <option value="27">IT - Telecommunications</option>
