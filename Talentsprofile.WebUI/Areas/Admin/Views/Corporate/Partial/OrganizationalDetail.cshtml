                        </select>
                    </div>

                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-4 control-label">
                        Type:
                    </label>
                    <div class="col-sm-4">
                        <select class="form-control" name="companySector" id="companySector">
                            <option value="Government" selected="selected">Government</option>
                            <option value="MNC">MNC</option>
                            <option value="NGO">NGO</option>
                            <option value="Private">Private</option>
                            <option value="Public">Public/PSU</option>
                        </select>
                    </div>
                    <div class="col-sm-4">
                        <select class="form-control" name="companyCategory" id="companyCategory">
                            <option value="CO" selected="selected">Company</option>
                            <option value="CONST">Consultancy/Job Agency</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-4 control-label">
                        Profile:
                    </label>
                    <div class="col-sm-8">
                        <textarea type="text" class="form-control" maxlength="1200" placeholder="Summary profile (max 1200 chars)"
                                  rows="5" name="companyProfile" id="companyProfile"></textarea>
                    </div>
                </div>
            </div>
            <div class="clearfix">&nbsp;</div>
            <div class="modal-footer">
                <button type="button" name="btnSave" id="btnSave" class="btn btn-primary btn-sm" data-dismiss="modal">Save</button>
                <button type="button" name="btnClose" id="btnClose" class="btn btn-primary btn-sm" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
<script>
    $('#btnSave').click(function () {
        $('#userAlertMsgBody').html('Please wait, saving organization detail...');
        $.ajax({
            url: '../adm/dashboard/AddOrganization',
            type: 'POST',
            data: {
                'name': $('#companyname').val(), 'address': $('#companyAddress').val(),
                'city': $('#companyCity').val(), 'country': $('#companyCountry').val(),
                'uri': $('#companyUri').val(), 'logoUri': $('#companyLogoUri').val(),
                'functionalArea': $('#functionalArea').val(), 'category': $('#companyCategory').val(),
                'sector': $('#companySector').val(), 'profile': $('#companyProfile').val(),
            },
            datatype: "json",
            contenttype: "application/json; charset=utf-8",
            processdata: false,
            success: function (result) {
                $('#userAlertMsgBody').html(result.Message);
                if (result.Code == 200) {
                    LoadOrganization(null);
                }
            },
            error: function () {
                $('#userAlertMsgBody').html('Sorry! Failed to communicate with server.');
            }
        });

        $('#manageProfile').show();
    })


    $('#btnClose').click(function () {
        ResetModalOrganization();
        $('#manageProfile').hide();
    });

    function ResetModalOrganization() {
        $('#companyname').val('');
        $('#companyAddress').val('');
        $('#companyCity').val('');
        $('#companyCountry').val('0');
        $('#companyUri').val('');
        $('#companyLogoUri').val('');
        $('#functionalArea').val('0')
        $('#companyCategory').val('CO');
        $('#companySector').val('Government');
        $('#companyProfile').val('');
    }
</script>