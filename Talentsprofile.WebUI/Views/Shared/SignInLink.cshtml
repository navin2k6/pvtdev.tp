<!-- Modal Login-->
<div class="modal fade" id="userLogin" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="exampleModalLabel">To login, please enter:</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" name="btnClose">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="msgAlert" role="alert" style="display: none" class="alert alert-warning alert-dismissible ">
                    <button type="button" class="close" data-dismiss="alert">
                        <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                    </button>
                </div>
                <div class="row">
                    <div class="col-md-10 form-horizontal" id="af-left">
                        @{
                            var display = "none";
                            if (!String.IsNullOrEmpty(Convert.ToString(ViewData["info"])))
                            {
                                display = "block";
                                <div class="alert alert-danger" style="display: @display">
                                    <p>@ViewData["info"]</p>
                                </div>
                            }
                        }

                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label">
                                Email:
                            </label>
                            <div class="col-sm-10">
                                <input type="email" placeholder="Your registered email" name="email" id="email" class="form-control" maxlength="50" onblur="ValidateCtrl('email','Email')"
                                       autocomplete="on" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label">
                                Password:
                            </label>
                            <div class="col-sm-10">
                                <input type="password" placeholder="Password" name="pwd" id="password" class="form-control" maxlength="20" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label">
                            </label>
                            <div class="col-sm-8">
                                <span>
                                    <input type="checkbox" name="rememberMe" />
                                    Remember me
                                </span><span style="color: #428bca; padding-left: 15px">
                                    <a href="forgotpassword">
                                        Password
                                        Help?
                                    </a>
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label">
                            </label>
                            <div class="col-sm-8">
                                <button type="submit" id="btnLogin" class="btn btn-primary btn-sm" formaction="LoginToProfile();">Login</button>
                                <button type="button" name="btnClose" class="btn btn-secondary btn-sm" data-dismiss="modal">Cancel</button>
                                @* <button type="button" name="btnTest" class="btn btn-secondary btn-sm" onclick="GetHtmlPageData()">Test</button>*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <img src="../ui/images/or_login.png" style="margin: -58px 270px 0px;">
                <div class="col-sm-12 form-horizontal social-buttons">
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-1 control-label">
                        </label>@*<script type="in/Login"></script>*@
                        <div class="col-sm-5">
                            <a class="btn btn-block btn-social btn-google" id="GoogleLogin" onclick="login()">
                                <span class="fa fa-google"></span>Sign in with Google
                            </a>
                        </div>
                        <div class="col-sm-5">
                            <a class="btn btn-block btn-social btn-linkedin" onclick="liAuth()">
                                <span class="fa fa-linkedin"></span>Sign in with LinkedIn
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $('#btnLogin').click(function () {
        LoginToProfile();
    });

    $('#email').keypress(function (e) {
        if (e.keyCode == 13)
            LoginToProfile();
    });

    $('#password').keypress(function (e) {
        if (e.keyCode == 13)
            LoginToProfile();
    });

    $('button[name=btnClose]').click(function () {
        ResetControls();
    });

    function ResetControls() {
        $('#msgAlert').html("");
        $('#msgAlert').hide();
        $('#email').val("");
        $('#password').val("");
        $('#rememberMe').val()
    }
</script>
