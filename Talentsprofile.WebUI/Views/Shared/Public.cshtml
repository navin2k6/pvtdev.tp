<!doctype html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1">
    <meta property="og:locale" content="en_US">
    <meta property="og:type" content="job portal">
    <meta name="og:title" property="og:title" content="Talent's Profile - Join! let's discover the world.">
    <meta name="description" content="Search more than thousands jobs across the globe. Global platform provides career related information to a talent for better opportunity, and helps hiring team to get a potential profile." charset="utf-8" />
    <meta name="og:description" property="og:description" content="Search more than thousands jobs across the globe. Global platform provides career related information to a talent for better opportunity, and helps hiring team to get a potential profile." charset="utf-8" />
    <meta property="og:url" content="http://talentsprofile.com">
    <meta property="og:site_name" content="Job notifications, profile generator">
    <meta name="og:image" property="og:image" content="http://talentsprofile.com/ui/images/og-img-talentsprofile.png" />
    <meta property="og:image:width" content="200">
    <meta property="og:image:height" content="200">
    <link rel="stylesheet" href="/../../ui/css/bootstrap.css">
    <link rel="stylesheet" href="/../../ui/css/font-awesome.min.css">
    <link rel="stylesheet" href="/../../ui/css/owl.carousel.min.css">
    <link rel="stylesheet" href="/../../ui/css/owl.theme.default.css">
    <link rel="stylesheet" href="/../../ui/css/style.css">
    <link rel="stylesheet" href="/../../ui/css/bootstrap-social.css">
    <script src="/../../ui/js/jquery-1.11.0.min.js" type="text/javascript" crossorigin="anonymous"></script>

    <!-- Google API -->
    <meta name="google-signin-client_id" content="554526791771-jqjraa543grpohsq561f1607fssi8g4d.apps.googleusercontent.com" />
    <script src="https://apis.google.com/js/platform.js" async defer></script>

    <!-- LinkedIn API -->
    <script type="text/javascript" src="//platform.linkedin.com/in.js">
        api_key: 81y7s2lyhyp6v2
        authorize: true
        onLoad: onLinkedInLoad
        scope: r_basicprofile r_emailaddress
    </script>
</head>

<body class="@ViewBag.BodyClass">
    @{
        TalentsProfile.DTO.UserTicket _ticket = TalentsProfile.HttpUser.ReadUsercookie();

        if (_ticket == null)
        {
            @Html.Partial("../Shared/SignInLink")
        }
        else
        {
            @Html.Partial("/Areas/Talent/Views/Shared/TopHeader.cshtml")
        }

        @RenderBody()

        @Html.Partial("../Shared/FooterLinks")
    }
</body>
</html>

<script src="/../../ui/js/bootstrap.js"></script>
<script src="/../../ui/js/owl.carousel.min.js"></script>
