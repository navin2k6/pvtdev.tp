@{
    ViewBag.Title = "Talentsprofile: account activation";
    Layout = "~/Views/Shared/Public.cshtml";
}

<div class="signUp-banner">
    <div class="container">
        <div class="row" style="min-height: 475px">
            <div class="col-md-8 signUpBanner-content">
                <h3>Activate account</h3>
                <div class="form-group">
                    <div class="col-sm-offset">
                        @{
                            var displayOk = "none";
                            var displayErr = "none";
                            if ((string)ViewData["status"] == "OK")
                            {
                                displayOk = "block";
                            <div class="alert alert-success" style="display:@displayOk">
                                <a href="#" class="alert-link"><strong>@ViewData["reg_title"]</strong></a><p>
                                    @ViewData["reg_msg"]
                                </p>
                            </div>
                            
                            <form class="form-horizontal" action="setaccount" method="post" role="form" id="formSetPassword">
                                <div class="form-group">
                                    <label for="inputEmail3" class="col-sm-3 control-label">
                                        Set password:</label>
                                    <div class="col-sm-4" id="div_password">
                                        <input type="password" class="form-control" id="setpassword" name="setpassword" />
                                        <input type="hidden" value="signup" name="reg_action" />
                                        <span class="glyphicon glyphicon-error form-control-feedback" style="display: none"
                                            id="span_password"></span>
                                    </div>

                                </div>
                                <div class="form-group">
                                    <label for="inputEmail3" class="col-sm-3 control-label">
                                        Re-type password:</label>
                                    <div class="col-sm-4" id="div_retypepassword">
                                        <input type="password" class="form-control" id="retypepassword" name="retypepassword" />
                                        <input type="hidden" name="uac" id="uac" />
                                        <input type="hidden" value="signup" name="reg_action" />
                                        <span class="glyphicon glyphicon-error form-control-feedback" style="display: none"
                                            id="span_retypepassword"></span>
                                    </div>

                                </div>
                                <div id="msgAlertSetPwd" role="alert" class="alert alert-success alert-dismissible" style="display: none">
                                    <button type="button" class="close" data-dismiss="alert">
                                        <span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                                </div>
                                <div class="form-group">
                                    <label for="inputEmail3" class="col-sm-3 control-label">
                                    </label>
                                    <div class="col-sm-8">
                                        <button type="submit" class="btn btn-primary btn-sm">
                                            Continue</button>
                                    </div>
                                </div>
                            </form>
                            }
                            else if (!string.IsNullOrEmpty((string)ViewData["status"]))
                            {
                                displayErr = "block";
                            <div class="alert alert-warning" style="display:@displayErr">
                                <a href="#" class="alert-link"><strong>@ViewData["reg_title"]</strong></a><p>
                                    @ViewData["reg_msg"]
                                </p>
                            </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
