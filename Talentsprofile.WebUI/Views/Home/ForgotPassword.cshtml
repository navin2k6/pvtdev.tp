@{
    ViewBag.Title = "Forgot password: Talentsprofile.com";
    Layout = "~/Views/Shared/Public.cshtml";
}


<div class="login-banner">
    <div class="container">
        <div class="row">
            <div class="col-md-8 xbox-paneltype" id="af-left">
                <div id="fpBody" class="form-horizontal">
                    <p>To reset your password, please enter your:</p>
                    <hr />
                    <div class="alert alert-success" style="display: none" id="divUsrMsg">
                    </div>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-3 control-label">
                            Registered Email:
                        </label>
                        <div class="col-sm-8" id="div_pwdemail">
                            <input type="email" value="" name="email" id="pwdemail" maxlength="60" class="form-control" placeholder="Enter email id" onblur="ValidateEmail()" />
                            <span class="glyphicon glyphicon-error form-control-feedback" style="display: none"
                                id="span_pwdemail"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-10">
                            <button type="submit" class="btn btn-primary btn-sm" id="btnForgotPassword">
                                Reset Password
                            </button>
                        </div>
                    </div>
                </div>

            </div>
            @{
                if (Request.Cookies["talentsprofileUser"] == null)
                {
                @Html.Partial("../Shared/SideBar")
                }
            }
        </div>
    </div>
    <div style="height: 50px"></div>
</div>
