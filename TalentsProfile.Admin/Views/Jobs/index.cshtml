
@{
    ViewBag.Title = "Manage jobs";
    Layout = "../Shared/Admin.cshtml";
}

<div class="form-horizontal">
    <div class="row">
        <div class="col-md-6">
            <h3>Posted Jobs(s):</h3>
        </div>
        <div class="col-md-6" style="text-align:right; vertical-align:bottom; padding-top:20px; padding-right:40px">
            <a href="#" data-toggle="modal" data-target="#manageProfile"><i class="fa fa-plus-circle fa-lg" aria-hidden="true"></i></a>
            &nbsp;<i class="fa fa-trash fa-lg" aria-hidden="true"></i>
        </div>
    </div>
</div>
<div class="clearfix">&nbsp;</div>
<div id="divExisting">
