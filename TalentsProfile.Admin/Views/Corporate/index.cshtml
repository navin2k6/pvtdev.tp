
@{
    ViewBag.Title = "Mange corporate";
    Layout = "../Shared/Admin.cshtml";
}

<div class="form-horizontal">
    <div class="row">
        <div class="col-md-6">
            <h3>Added Organization(s):</h3>
        </div>
        <div class="col-md-6" style="text-align:right; vertical-align:bottom; padding-top:20px; padding-right:40px">
           <a href="#" data-toggle="modal" data-target="#manageProfile"><i class="fa fa-plus-circle fa-lg" title="Add Organization" aria-hidden="true"></i></a>
            &nbsp;<i class="fa fa-trash fa-lg" aria-hidden="true"></i>
        </div>
    </div>
</div>
<div class="clearfix">&nbsp;</div>
<table class="table">
    <thead class="thead-light">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">City</th>
            <th scope="col">Category</th>
            <th scope="col">Sector</th>
        </tr>
    </thead>
    <tbody id="orgRows">
        <tr><td colspan="5">No records available</td></tr>
    </tbody>
</table>

<!-- Modal Dialog-->
<div class="modal fade" id="manageProfile" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            @Html.Partial("Partial/OrganizationalDetail")
        </div>
    </div>
</div>

<!-- Modal Dialog-->
<div class="modal fade" id="manageJobProfile" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabelForJob" aria-hidden="true">
    <div class="modal-dialog" role="document" style="width:650px">
        <div class="modal-content">
            @Html.Partial("../Jobs/Partial/ManageJob")
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        LoadOrganization(null);
    });
</script>
<script src="~/ui/adm/PostJob.js" type="text/javascript"></script>

